    <LinearLayout
        android:id="@+id/login"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@drawable/btn_login"
