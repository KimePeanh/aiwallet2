            android:fontFamily="@font/ab"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:text="@string/login"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>


