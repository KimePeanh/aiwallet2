<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/side"
    android:background="@color/backgroundcolor"
    tools:context=".home">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundcolor">
        <FrameLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <LinearLayout
                android:padding="10dp"
                android:background="@color/appcolor"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="250dp">
                <FrameLayout
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
<!--                    <ImageView-->
<!--                        android:id="@+id/menu"-->
<!--                        android:src="@drawable/ic_lmenu"-->
<!--                        android:layout_width="25dp"-->
<!--                        android:layout_height="25dp"/>-->
                    <com.google.android.material.appbar.AppBarLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.google.android.material.appbar.MaterialToolbar
                            android:id="@+id/topAppBar"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            app:navigationIcon="@drawable/ic_lmenu"
                            android:background="@color/appcolor" />
                    </com.google.android.material.appbar.AppBarLayout>
                    <ImageView
                        android:layout_gravity="end"
                        android:src="@drawable/ic_noti"
                        android:layout_width="25dp"
                        android:layout_height="40dp"/>
                    <ImageView
                        android:layout_marginRight="40dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_qr"
                        android:layout_width="25dp"
                        android:layout_height="40dp"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:elevation="5dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="190dp"
                android:background="@drawable/sha"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="100dp">
            <LinearLayout
                android:id="@+id/wallet"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/wal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:fontFamily="@font/ab"
                    android:textColor="@color/appcolor"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/his"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/history"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView

                        android:fontFamily="@font/ab"
                        android:textColor="@color/appcolor"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:text="History"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/qr"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:fontFamily="@font/ab"
                        android:textColor="@color/appcolor"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:text="Scan QR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:paddingBottom="20dp"
                android:id="@+id/pa"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/circle"
                    android:scaleType="centerCrop"
                    android:src="@drawable/jingyi"
                    app:civ_border_color="@android:color/transparent"
                    app:civ_border_width="4dp"
                    app:civ_shadow="false"
                    app:civ_shadow_color="@android:color/transparent"
                    app:civ_shadow_radius="1dp" />
            </RelativeLayout>

        </FrameLayout>

        <TextView
            android:fontFamily="@font/ab"
            android:text="Payment Type"
            android:layout_margin="16dp"
            android:textSize="16dp"
            android:textColor="@color/appcolor"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
               android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/food"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:fontFamily="@font/ab"
                    android:textColor="@color/black"
                    android:text="Snack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/gas"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:fontFamily="@font/ab"
                    android:textColor="@color/black"
                    android:text="Fuel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/book"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:fontFamily="@font/ab"
                    android:textColor="@color/black"
                    android:text="Education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/uti"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:fontFamily="@font/ab"
                    android:textColor="@color/black"
                    android:text="Utillities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/home"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:fontFamily="@font/ab"
                    android:textColor="@color/black"
                    android:text="Home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/bag"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:fontFamily="@font/ab"
                    android:textColor="@color/black"
                    android:text="Meal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/phone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:fontFamily="@font/ab"
                    android:textColor="@color/black"
                    android:text="Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/baby"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:fontFamily="@font/ab"
                    android:textColor="@color/black"
                    android:text="Baby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/clothes"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:fontFamily="@font/ab"
                    android:textColor="@color/black"
                    android:text="Clothes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/bill"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:fontFamily="@font/ab"
                    android:textColor="@color/black"
                    android:text="Other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_item"
        android:background="@color/appcolor"
        android:layout_gravity="start"
        />
</androidx.drawerlayout.widget.DrawerLayout>
<!--<?xml version="1.0" encoding="utf-8"?>-->

